<div class="container-fluid" id="grad1">
    <div class="row justify-content-center mt-0">
        <div class="col-11 col-sm-9 col-md-7 col-lg-6 text-center p-0 mb-2" style="margin-top:130px">
            <div class="card px-0 pt-4 pb-0 mt-3 mb-3">
                <h2><strong>Connection Request Form</strong></h2>
                <p>All the entries with a star mark (<b style="color:red">*</b>) are mandatory for a successful submission of a request. </p>
                <div class="row">
                    <div class="col-md-12 mx-0">
                        <form id="msform">
                            <!-- progressbar -->
                            <ul id="progressbar" style="margin-left:-25px">
                                <li class="active" id="profile"><strong>Profile Info.</strong></li>
                                <li id="serviceinfo"><strong>Service Info. </strong></li>
                                <li id="confirm"><strong>Finish</strong></li>
                            </ul>
                            <!-- fieldsets -->
                            @{
                                Html.RenderPartial("partials/_profile_fields");
                            }
                            @{
                                Html.RenderPartial("partials/_service_info_fields");
                            }
                            @{
                                Html.RenderPartial("partials/_confirmation");
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
